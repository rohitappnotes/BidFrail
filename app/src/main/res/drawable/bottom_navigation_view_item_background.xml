<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <layer-list>
            <item
                android:bottom="2.5dp"
                android:left="4dp"
                android:right="4dp"
                android:top="2.5dp">

                <shape
                    android:shape="rectangle">

                    <solid
                        android:color="@color/bottom_navigation_view_item_background_solid" />

                    <stroke
                        android:color="@color/bottom_navigation_view_item_background_stroke"
                        android:width="@dimen/_1sdp"/>

                    <corners
                        android:bottomLeftRadius="8dp"
                        android:bottomRightRadius="8dp"
                        android:topLeftRadius="8dp"
                        android:topRightRadius="8dp" />

                    <padding
                        android:bottom="0dp"
                        android:left="0dp"
                        android:right="0dp"
                        android:top="0dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item
        android:state_checked="true">
        <layer-list>
            <item
                android:bottom="2.5dp"
                android:left="4dp"
                android:right="4dp"
                android:top="2.5dp">

                <shape
                    android:shape="rectangle">

                    <solid
                        android:color="@color/bottom_navigation_view_item_background_solid" />

                    <stroke
                        android:color="@color/bottom_navigation_view_item_background_stroke"
                        android:width="@dimen/_1sdp"/>

                    <corners
                        android:bottomLeftRadius="8dp"
                        android:bottomRightRadius="8dp"
                        android:topLeftRadius="8dp"
                        android:topRightRadius="8dp" />

                    <padding
                        android:bottom="0dp"
                        android:left="0dp"
                        android:right="0dp"
                        android:top="0dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item
                android:bottom="2.5dp"
                android:left="4dp"
                android:right="4dp"
                android:top="2.5dp">

                <shape
                    android:shape="rectangle">

                    <solid
                        android:color="@android:color/transparent" />

                    <stroke
                        android:color="@android:color/transparent"
                        android:width="@dimen/_1sdp"/>

                    <corners
                        android:bottomLeftRadius="8dp"
                        android:bottomRightRadius="8dp"
                        android:topLeftRadius="8dp"
                        android:topRightRadius="8dp" />

                    <padding
                        android:bottom="0dp"
                        android:left="0dp"
                        android:right="0dp"
                        android:top="0dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>