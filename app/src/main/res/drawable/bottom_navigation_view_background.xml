<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="-5dp"
        android:left="-5dp"
        android:right="-5dp">

        <shape
            android:shape="rectangle">

            <solid android:color="@color/bottom_navigation_view_background_solid" />

            <stroke
                android:width="1dp"
                android:color="@color/bottom_navigation_view_background_stroke" />

            <corners
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp"
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp" />

            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />
        </shape>
    </item>
</layer-list>